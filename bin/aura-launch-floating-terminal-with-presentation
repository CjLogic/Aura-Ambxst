#!/bin/bash

cmd="$*"
if [ -n "$cmd" ]; then
  exec setsid uwsm-app -- xdg-terminal-exec --app-id=org.aura.terminal --title=Aura -e bash -c "aura-show-logo; $cmd; aura-show-done"
else
  exec setsid uwsm-app -- xdg-terminal-exec --app-id=org.aura.terminal --title=Aura -e bash -c "aura-show-logo; aura-show-done"
fi
